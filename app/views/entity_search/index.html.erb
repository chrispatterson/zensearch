<%= form_with(url: search_url, method: 'get', local: true) do %>
  <div class="row pt-5">
    <%= text_field_tag(:text, nil, {class: 'form-control col-8', autocomplete: :off}) %>
    <%= select_tag(:format, options_for_select([:html, :json]), {class: 'custom-select col-2' }) %>
    <%= submit_tag('Search', class: 'btn btn-primary col-2', name: nil) %>
  </div>
<% end %>
